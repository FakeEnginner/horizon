    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/horizon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Horizon</item>

        <item name="android:textColor">#676767</item>
    </style>
    <style name="forgot_pass">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#F83758</item>
    </style>
    <style name="or_continue">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#575757</item>
    </style>
    <style name="create_an_account">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#575757</item>
